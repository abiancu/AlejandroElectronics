@model AlejandroElectronics.Models.ProductsViewModel
@{
    ViewData["Title"] = "Index";
   

}
@foreach (var product in Model.Products)
{
    <h2>@product.Name</h2>
    <div class="row">
        <div class="col-4">
            <img src="@product.ImageUrl" alt="@product.ImageUrl" class="img-fluid" />
        </div>
        <div class="col-8">
            <dl>
                <dt>Name</dt>
                <dd>@product.Name</dd>
                <dt>Description</dt>
                <dd>@product.Description</dd>
            </dl>
            <form asp-action="Index" asp-controller="Products" method="post">
                <input type ="hidden" name="id" value="@Model.Products" />
                <input type="submit" value="Buy it" class="btn btn-danger" />
            </form>
        </div>
    </div>
        
}
