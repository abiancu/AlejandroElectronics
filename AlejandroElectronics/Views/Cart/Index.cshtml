                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@ @*--> this is default asp-actions generated when scaffolding*@
                
                @*GET A BUTTON TO GO TO SHIPPING *@

                <a asp-action="Order" asp-route-id="@item.Id">Order</a>

            </td>
        </tr>
}
    </tbody>
